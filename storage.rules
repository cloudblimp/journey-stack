rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Trip covers (folder images)
    match /trip-covers/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Trip photos (uploaded to trip detail page)
    match /trip-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Entry photos (uploaded to journal entries)
    match /entry-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}